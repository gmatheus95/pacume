<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mvp.main_project.pacumeteam.pacume_project.DishActivity">

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            style="@style/labelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="Stacker Triplo" />

        <ImageView
            android:id="@+id/imgDishes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txtPrevious"
            style="@style/labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgDishes"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imgDishes"
            android:gravity="center"
            android:minWidth="50dp"
            android:text="&lt;"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtNext"
            style="@style/labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgDishes"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imgDishes"
            android:gravity="center"
            android:minWidth="50dp"
            android:text="&gt;" />

        <TextView
            style="@style/labelText"
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgDishes"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            android:gravity="left"
            android:lines="6"
            android:maxLines="6"
            android:text="Descrição: Delicioso lanche com três hamburgueres e muito queijo\n\nCategoria: Lanches\n\nEstabelecimento: Burguer King" />


        <Button
            android:id="@+id/btnGoToEstablishment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:text="Ir para Estabelecimento" />



    </android.widget.RelativeLayout>

</ScrollView>

