<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mvp.main_project.pacumeteam.pacume_project.EstablishmentActivity">

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            style="@style/labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="Nome do Estabelecimento" />

        <ImageView
            android:id="@+id/imgEstablishment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txtPrevious"
            style="@style/labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgEstablishment"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imgEstablishment"
            android:gravity="center"
            android:minWidth="50dp"
            android:text="<"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtNext"
            style="@style/labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgEstablishment"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imgEstablishment"
            android:gravity="center"
            android:minWidth="50dp"
            android:text=">" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgEstablishment"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            android:gravity="left"
            android:lines="8"
            android:maxLines="8"
            android:text="Descrição\n\nTelefone\n\nEndereço\n\nEtc" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_below="@id/txtDescription"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.widget.RelativeLayout>

</ScrollView>