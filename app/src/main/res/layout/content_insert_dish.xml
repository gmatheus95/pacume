<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mvp.main_project.pacumeteam.pacume_project.InsertDish"
    tools:showIn="@layout/activity_insert_dish">

    <ImageView
        android:id="@+id/ivDishPhoto"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_add_a_photo_black_48dp" />

        <EditText
            android:id="@+id/etNomePrato"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="5.5dp"
            android:focusableInTouchMode="false"
            android:hint="Nome do Prato"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etNomeEstabelecimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="5dp"
            android:focusableInTouchMode="false"
            android:hint="Nome do Estabelecimento"
            android:inputType="text"/>

        <TextView
            android:layout_marginTop="15.5dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15.5dp"
            android:shadowColor="@android:color/holo_blue_dark"
            android:layout_height="wrap_content"
            android:text="Escolha a Categoria: "/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="55dp"
            android:layout_height="wrap_content"/>


</LinearLayout>
